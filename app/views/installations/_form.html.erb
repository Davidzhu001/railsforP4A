<%= form_for @installation, :html => { :class => "form-horizontal installation" } do |f| %>

    <% if @installation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@installation.errors.count, "error") %> prohibited this installation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @installation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= form_for @comment, :html => { :class => "form-horizontal comment" } do |f| %>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@comment[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :quantity, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <%= error_span(@comment[:quantity]) %>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%= error_span(@comment[:price]) %>
  </div>
                          

  <%= f.submit nil, :class => 'btn btn-primary' %>
                            <% end %>

  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            installations_path, :class => 'btn btn-default' %>
<% end %>

